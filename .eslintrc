{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },

    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },

    "settings": {
        "react": {
            "createClass": "createReactClass",
            "version": "^16.4.2",
            "flowVersion": "0.53"
        },
        "propWrapperFunctions": ["forbidExtraProps"]
    }


}